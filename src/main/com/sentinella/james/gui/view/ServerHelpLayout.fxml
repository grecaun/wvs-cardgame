<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="330.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sentinella.james.gui.view.HelpController">
   <children>
      <Button layoutX="142.0" layoutY="560.0" mnemonicParsing="false" onAction="#close" text="Close" />
      <Label layoutX="14.0" layoutY="59.0" prefWidth="300.0" text="Lobby timeout - the amount of time in seconds the server waits to start a game after enough clients connect to the server." wrapText="true" />
      <Label layoutX="14.0" layoutY="118.0" prefWidth="300.0" text="Play/swap timeout - the amount of time in seconds the server will wait for a player to make a play/swap cards. 0 means no timeout." wrapText="true" />
      <Label layoutX="14.0" layoutY="179.0" prefWidth="300.0" text="Minimum number of players - the number of players the server requires for a game to be running. Can be no less than 3 and no greater than 7." wrapText="true" />
      <Label layoutX="14.0" layoutY="239.0" prefWidth="300.0" text="Max clients - the number of clients the server will allow to connect.  Cannot be less than 3." wrapText="true" />
      <Label layoutX="14.0" layoutY="284.0" prefWidth="300.0" text="Strikes before disconnect - the number of erroneous messages a client can send before being forcefully disconnected." wrapText="true" />
      <Label layoutX="14.0" layoutY="347.0" prefWidth="300.0" text="Port number - the port the server will listen for new connections on. Cannot be less than 1024." wrapText="true" />
      <Label layoutX="133.0" layoutY="12.0" text="Help">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="391.0" prefWidth="300.0" text="To start a server press the start button. Defaults will be used for any values not placed in the text boxes before you pressed the start button. You can disconnect at any point with the disconnect button (which only displays when connected.) You can change any server setting except the port number with the server running.  Connect to a running server with a client.  The information you need to connect should be displayed below the submit and disconnect buttons." wrapText="true" />
   </children>
</AnchorPane>
